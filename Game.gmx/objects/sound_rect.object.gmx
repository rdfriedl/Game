            <kind>1</kind>
            <string>if(self.sound == -1) exit;

if(place_meeting(x,y,player) == true){
    //player is here, start playing and fade in
    if(!audio_is_playing(self.sound)){
        audio_emitter_gain(self.emitter,0.1);
        self.playing = audio_play_sound_on(self.emitter,self.sound,false,50);
    }
    else if(audio_emitter_get_gain(self.emitter) &lt; self.volume){
        //fade in
        var gain = audio_emitter_get_gain(self.emitter) * self.ex;
        if(gain &lt; self.volume){
            audio_emitter_gain(self.emitter,gain);
        }
        else{
            audio_emitter_gain(self.emitter,self.volume);
        }
    }
}
else{
    //player left, fade out the sound and them stop it
    if(audio_emitter_get_gain(self.emitter) &gt; 0){
        //fade out
        audio_emitter_gain(self.emitter,audio_emitter_get_gain(self.emitter) / self.ex);
    }
    else{
        //finished fading out, now stop the sound
        audio_stop_sound(self.playing);
    }
}

